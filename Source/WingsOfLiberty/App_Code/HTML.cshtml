@helper CSSLink(string cssFile, string media = "screen"){
    <link href="/Public/stylesheets/@cssFile" rel="stylesheet" type="text/css" media="@media"/>
}


@helper Image(string imgFile){
    <img src="/Public/images/@imgFile" />
}

@helper ImageLink(string link, string imgFile){
    <a href="@link">
       @HTML.Image(imgFile)
    </a>
    
}

@helper jQuery(){
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" type="text/javascript"></script>
    
}